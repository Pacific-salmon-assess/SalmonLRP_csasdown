@article{beechieHydrologicRegimeConservation2006,
  title = {Hydrologic Regime and the Conservation of Salmon Life History Diversity},
  author = {Beechie, Timothy and Buhle, Eric and Ruckelshaus, Mary and Fullerton, Aimee and Holsinger, Lisa},
  year = {2006},
  month = jul,
  journal = {Biological Conservation},
  volume = {130},
